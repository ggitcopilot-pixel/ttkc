@using Karion.BusinessSolution.Authorization
@using Karion.BusinessSolution.Web.Areas.App.Models.NguoiThans
@using Karion.BusinessSolution.Web.Areas.App.Startup
@model NguoiThansViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Host.NguoiThans;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/NguoiThans/Index.js" asp-append-version="true"></script>
}
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


                <div class="kt-subheader kt-grid__item">
                  <div class="@(await GetContainerClass())">
                    <div class="kt-subheader__main">
                        <h3 class="kt-subheader__title">
                            <span>@L("NguoiThans")</span>
                        </h3>
                        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                        <span class="kt-subheader__desc">
                            @L("NguoiThansHeaderInfo")
                        </span>
                    </div>
                    <div class="kt-subheader__toolbar">
                        <div class="kt-subheader__wrapper">
                            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_NguoiThans_Create))
                            {
                                <button id="CreateNewNguoiThanButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewNguoiThan")</button>                
                            }
                        </div>
                    </div>
                  </div>
                </div>
            
<div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">   
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="NguoiThansTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetNguoiThansButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="HoVaTenFilterId">@L("HoVaTen")</label>
									<input type="text" class="form-control" name="hoVaTenFilter" id="HoVaTenFilterId">
								</div>
                            </div>
                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinTuoiFilterId">@L("MinMax") @L("Tuoi")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minTuoiFilter" id="MinTuoiFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxTuoiFilter"  id="MaxTuoiFilterId"/>
									</div>
                                </div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="GioiTinhFilterId">@L("GioiTinh")</label>
									<input type="text" class="form-control" name="gioiTinhFilter" id="GioiTinhFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="DiaChiFilterId">@L("DiaChi")</label>
									<input type="text" class="form-control" name="diaChiFilter" id="DiaChiFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="MoiQuanHeFilterId">@L("MoiQuanHe")</label>
									<input type="text" class="form-control" name="moiQuanHeFilter" id="MoiQuanHeFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="SoDienThoaiFilterId">@L("SoDienThoai")</label>
									<input type="text" class="form-control" name="soDienThoaiFilter" id="SoDienThoaiFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="NguoiBenhHoVaTenFilterId">(@L("NguoiBenh")) @L("HoVaTen")</label>
									<input type="text" class="form-control" name="nguoiBenhHoVaTenFilter" id="NguoiBenhHoVaTenFilterId">
								</div>
                            </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="NguoiThansTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("HoVaTen")</th>
								<th>@L("Tuoi")</th>
								<th>@L("GioiTinh")</th>
								<th>@L("DiaChi")</th>
								<th>@L("MoiQuanHe")</th>
								<th>@L("SoDienThoai")</th>
								<th>@L("NguoiBenhHoVaTen")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>