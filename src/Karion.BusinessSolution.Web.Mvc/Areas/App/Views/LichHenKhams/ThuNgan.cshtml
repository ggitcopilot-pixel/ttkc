                                    <option value="0">@L("KhongBHYT")</option>
                                    <option value="1">@L("CoBHYT")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="SoTheBHYTFilterId">@L("SoTheBHYT")</label>
                                <input type="text" class="form-control" name="soTheBHYTFilter" id="SoTheBHYTFilterId">
