                    <div class="row align-items-center mb-4">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="MinNgayHenKhamFilterId">@L("NgayHenKham")</label>
                                <div class="input-group">
                                    <input class="form-control m-input date-picker" type="text" placeholder="@L("TuNgay")" id="MinNgayHenKhamFilterId">
                                    <span style="line-height: 40px;padding: 0 15px 0 15px;"> &mdash; </span>
                                    <input class="form-control m-input date-picker" type="text" placeholder="@L("DenNgay")" id="MaxNgayHenKhamFilterId">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="MinTimeHoanThanhKhamFilterId">@L("ThoiGianHoanThanhKham")</label>
                                <div class="input-group">
                                    <input class="form-control m-input date-picker" type="text" placeholder="@L("TuNgay")" id="MinTimeHoanThanhKhamFilterId">
