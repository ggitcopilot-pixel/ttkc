                                <label for="MinBHYTValidDateFilterId">@L("BHYTValidDateRange")</label>
                                <div class="input-group">
                                    <input class="form-control m-input date-picker" type="text" placeholder="@L("MinValue")" id="MinBHYTValidDateFilterId">
