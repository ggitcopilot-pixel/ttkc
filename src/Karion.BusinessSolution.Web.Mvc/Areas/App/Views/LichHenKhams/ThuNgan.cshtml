                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="IsDaKhamFilterId">@L("TinhTrangKham")</label>
                                <select class="form-control" name="IsDaKhamFilter" id="IsDaKhamFilterId">
                                    <option value="-1">@L("All")</option>
                                    <option value="0">@L("ChuaKham")</option>
                                    <option value="1">@L("DaKham")</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <label for="UserNameFilterId">@L("BacSiKham")</label>
                                <input type="text" class="form-control" name="userNameFilter" id="UserNameFilterId">
                            </div>
                        </div>
