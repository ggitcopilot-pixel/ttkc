@using Karion.BusinessSolution.Authorization
@using Karion.BusinessSolution.Web.Areas.App.Models.HanetFaceDetecteds
@using Karion.BusinessSolution.Web.Areas.App.Startup
@model HanetFaceDetectedsViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Host.HanetFaceDetecteds;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/HanetFaceDetecteds/Index.js" asp-append-version="true"></script>
}
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


                <div class="kt-subheader kt-grid__item">
                  <div class="@(await GetContainerClass())">
                    <div class="kt-subheader__main">
                        <h3 class="kt-subheader__title">
                            <span>@L("HanetFaceDetecteds")</span>
                        </h3>
                        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                        <span class="kt-subheader__desc">
                            @L("HanetFaceDetectedsHeaderInfo")
                        </span>
                    </div>
                    <div class="kt-subheader__toolbar">
                        <div class="kt-subheader__wrapper">
                            <button id="ExportToExcelButton" class="btn btn-outline-success"><i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
            @if (IsGranted(AppPermissions.Pages_HanetFaceDetecteds_Create))
                            {
                                <button id="CreateNewHanetFaceDetectedButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewHanetFaceDetected")</button>                
                            }
                        </div>
                    </div>
                  </div>
                </div>
            
<div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">   
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__body">
            <div class="kt-form">
                <div class="row align-items-center mb-4">
                    <div class="col-xl-12">
                        <div class="form-group align-items-center">
                            <div class="input-group">
                                <input type="text" id="HanetFaceDetectedsTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                <span class="input-group-btn">
                                    <button id="GetHanetFaceDetectedsButton" class="btn btn-primary" type="submit"><i class="flaticon-search-1"></i></button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
			</div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
						<div class="kt-separator kt-separator--border-dashed"></div>
					</div>

							<div class="col-md-3">
								<div class="form-group">
									<label for="placeIdFilterId">@L("placeId")</label>
									<input type="text" class="form-control" name="placeIdFilter" id="placeIdFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="deviceIdFilterId">@L("deviceId")</label>
									<input type="text" class="form-control" name="deviceIdFilter" id="deviceIdFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="userDetectedIdFilterId">@L("userDetectedId")</label>
									<input type="text" class="form-control" name="userDetectedIdFilter" id="userDetectedIdFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="maskFilterId">@L("mask")</label>
									<input type="text" class="form-control" name="maskFilter" id="maskFilterId">
								</div>
                            </div>
							<div class="col-md-3">
								<div class="form-group">
									<label for="detectImageUrlFilterId">@L("detectImageUrl")</label>
									<input type="text" class="form-control" name="detectImageUrlFilter" id="detectImageUrlFilterId">
								</div>
                            </div>
                            <div class="col-md-3">
                                 <div class="form-group">
									<label  for="MinflagFilterId">@L("MinMax") @L("flag")</label>
									<div class="input-group">
										<input type="number" class="form-control m-input" placeholder="@L("MinValue")" name="minflagFilter" id="MinflagFilterId"/>
                                        <input type="number" class="form-control m-input" placeholder="@L("MaxValue")" name="maxflagFilter"  id="MaxflagFilterId"/>
									</div>
                                </div>
                            </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item"><i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none"><i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
            <div class="row align-items-center">
                <table id="HanetFaceDetectedsTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>@L("Actions")</th>
								<th>@L("placeId")</th>
								<th>@L("deviceId")</th>
								<th>@L("userDetectedId")</th>
								<th>@L("mask")</th>
								<th>@L("detectImageUrl")</th>
								<th>@L("flag")</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
  </div>
</div>