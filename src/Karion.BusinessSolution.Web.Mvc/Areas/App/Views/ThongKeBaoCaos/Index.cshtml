@using Karion.BusinessSolution.Authorization
@using Karion.BusinessSolution.Web.Areas.App.Startup

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/ThongKeBaoCaos/Index.js" asp-append-version="true"></script>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("DiemDanhTheoNgay")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("DiemDanhTheoNgay")
                </span>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-3">
            <input type="date" id="attendanceDate" class="form-control" />
        </div>
        <div class="col-md-2">
            <button id="btnLoadAttendance" class="btn btn-primary">Xem điểm danh</button>
        </div>
    </div>
    <table class="table table-bordered" id="attendanceTable">
        <thead>
        <tr>
            <th>Nhân viên</th>
            <th>Check-in sáng</th>
            <th>Trễ sáng?</th>
            <th>Check-in chiều</th>
            <th>Trễ chiều?</th>
        </tr>
        </thead>
        <tbody>
        <!-- Data by js -->
        </tbody>
    </table>
</div>