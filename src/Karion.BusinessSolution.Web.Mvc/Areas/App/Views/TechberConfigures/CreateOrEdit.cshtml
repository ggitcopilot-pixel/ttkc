
@using System.Globalization
@using Karion.BusinessSolution.Authorization
@using Karion.BusinessSolution.Web.Areas.App.Models.TechberConfigures
@using Karion.BusinessSolution.Web.Areas.App.Startup
@model CreateOrEditTechberConfigureViewModel

@{
    ViewBag.CurrentPageName = AppPageNames.Host.TechberConfigures;
}
@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/TechberConfigures/CreateOrEdit.js" asp-append-version="true"></script>
}
<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor"> 


                <div class="kt-subheader kt-grid__item">
                  <div class="@(await GetContainerClass())">
                    <div class="kt-subheader__main">
                        <h3 class="kt-subheader__title">
                            <span>@(Model.IsEditMode ? (L("EditTechberConfigure")) : L("CreateNewTechberConfigure"))</span>
                        </h3>
                        <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                        <div class="kt-subheader__breadcrumbs">
                            <a href="/App/TechberConfigures" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i>&thinsp;@L("TechberConfigures")</a>
                            <span class="kt-subheader__breadcrumbs-separator"></span>
                            <a href="javascript:;" class="kt-subheader__breadcrumbs-link kt-subheader__breadcrumbs-link--active">
                               @(Model.IsEditMode ? (L("Edit")) : L("Create"))
                            </a>
                        </div>
                    </div>
                  </div>
                </div>
            

<div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
    <div class="kt-portlet kt-portlet--mobile">
        <form name="TechberConfigureInformationsForm" role="form" novalidate class="form-validation">
            <div class="kt-portlet__body">
                <div class="kt-form">
                     <div id="TechberConfigureInformationsTab">   
                            @if (Model.IsEditMode)
                            {
                                <input type="hidden" name="id" value="@Model.TechberConfigure.Id" />
                            }

				            

				            
								<div class="form-group">
									<label for="TechberConfigure_Key">@L("Key")</label>
									<input class="form-control" id="TechberConfigure_Key" value="@Model.TechberConfigure.Key" type="text" name="key"     />
								</div>
					
								<div class="form-group">
									<label for="TechberConfigure_Value">@L("Value")</label>
									<input class="form-control" id="TechberConfigure_Value" value="@Model.TechberConfigure.Value" type="text" name="value"     />
								</div>
					                   
                    </div>
			    </div>            
            </div>
            <div class="kt-portlet__foot">
			    <div class="row align-items-center">
				    <div class="col-lg-12">
					    <button type="button" id="saveBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("Save")</button>
					    @if (!Model.IsEditMode)
                        {
					        <button type="button" id="saveAndNewBtn" class="btn btn-success float-right"><i class="fa fa-save"></i> @L("SaveAndNew")</button>
					    }
				    </div>
			    </div>
		    </div>
         </form>
    </div>
  </div>
</div>