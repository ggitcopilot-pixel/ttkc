@using Karion.BusinessSolution.Authorization
@using Karion.BusinessSolution.Web.Areas.App.Startup


@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/TiepNhanBenhNhan/Index.js" asp-append-version="true"></script>
}

<style>
    .btn-check:active + .btn.btn-active-primary, .btn-check:checked + .btn.btn-active-primary, .btn.btn-active-primary.active, .btn.btn-active-primary.show, .btn.btn-active-primary:active:not(.btn-active), .btn.btn-active-primary:focus:not(.btn-active), .btn.btn-active-primary:hover:not(.btn-active), .show > .btn.btn-active-primary {
        color: #fff;
        border-color: #50cd89;
        background-color: #50cd89 !important;
    }
    .btn.btn-outline-default {
        border: 1px solid #e4e6ef;
    }

    .btn {
        outline: 0 !important;
    }

    .btn:not(.btn-shadow):not(.shadow):not(.shadow-sm):not(.shadow-lg) {
        box-shadow: none !important;
    }

    .nav-link {
        display: block;
        padding: 0.5rem 1rem;
        color: #50cd89;
        transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out;
    }

    .svg-icon.svg-icon-3x svg {
        height: 3rem !important;
        width: 3rem !important;
    }

    img, svg {
        vertical-align: middle;
    }

    .fw-bold {
        font-weight: 500 !important;
    }

    .fs-6 {
        font-size: 16px !important;
    }

    ul li.nav-item{
        cursor: pointer;
    }

</style>

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("TiepNhanBenhNhan")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("QuanLyThongTinKhamBenh")
                </span>
            </div>
        </div>
    </div>

    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="mb-10">
            <!--begin::Tabs-->
            <ul class="nav row mb-10">
                @if (IsGranted(AppPermissions.Pages_TiepNhanBenhNhan_LeTan))
                {
                    <li class="nav-item col-12 col-lg mb-3 mb-lg-0">
                        <div id="kvletan" style="background-color: #fff" class="nav-link btn btn-flex btn-color-gray-400 btn-outline btn-outline-default btn-active-primary d-flex flex-grow-1 flex-column flex-center py-5 h-1250px h-lg-175px" data-bs-toggle="tab">
                            <!--begin::Svg Icon | path: icons/duotune/abstract/abs027.svg-->
