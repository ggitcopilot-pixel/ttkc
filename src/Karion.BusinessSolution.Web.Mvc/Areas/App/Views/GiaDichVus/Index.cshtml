@using Karion.BusinessSolution.Authorization
@using Karion.BusinessSolution.Web.Areas.App.Models.GiaDichVus
@using Karion.BusinessSolution.Web.Areas.App.Startup
@model GiaDichVusViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Common.GiaDichVus;
}

@section Scripts
{
    <script abp-src="/view-resources/Areas/App/Views/GiaDichVus/Index.js" asp-append-version="true"></script>
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">


    <div class="kt-subheader kt-grid__item">
        <div class="@(await GetContainerClass())">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    <span>@L("GiaDichVus")</span>
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <span class="kt-subheader__desc">
                    @L("GiaDichVusHeaderInfo")
                </span>
            </div>
            <div class="kt-subheader__toolbar">
                <div class="kt-subheader__wrapper">
                    <button id="ExportToExcelButton" class="btn btn-outline-success">
                        <i class="fa fa-file-excel"></i> @L("ExportToExcel")</button>
                    @if (IsGranted(AppPermissions.Pages_GiaDichVus_Create))
                    {
                        <button id="CreateNewGiaDichVuButton" class="btn btn-primary blue">
                            <i class="fa fa-plus"></i> @L("CreateNewGiaDichVu")</button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="@(await GetContainerClass()) kt-grid__item kt-grid__item--fluid">
        <div class="kt-portlet kt-portlet--mobile">
            <div class="kt-portlet__body">
                <div class="kt-form">
                    <div class="row align-items-center mb-4">
                        <div class="col-xl-12">
                            <div class="form-group align-items-center">
                                <div class="input-group">
                                    <input type="text" id="GiaDichVusTableFilter" class="form-control m-input" placeholder="@L("SearchWithThreeDot")" value="@Model.FilterText">
                                    <span class="input-group-btn">
                                        <button id="GetGiaDichVusButton" class="btn btn-primary" type="submit">
                                            <i class="flaticon-search-1"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                    <div class="col-md-12">
                        <div class="kt-separator kt-separator--border-dashed"></div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="MucGiaFilterId">@L("MucGia")</label>
                            <input type="text" class="form-control" name="mucGiaFilter" id="MucGiaFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="MoTaFilterId">@L("MoTa")</label>
                            <input type="text" class="form-control" name="moTaFilter" id="MoTaFilterId">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="MinGiaFilterId">@L("Gia")</label>
                            <div class="input-group">
                                <input type="number" class="form-control m-input" placeholder="@L("TuGia")" name="minGiaFilter" id="MinGiaFilterId"/>
                                <input type="number" class="form-control m-input" placeholder="@L("DenGia")" name="maxGiaFilter" id="MaxGiaFilterId"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="MinNgayApDungFilterId">@L("NgayApDungRange")</label>
                            <div class="input-group">
                                <input class="form-control m-input date-picker" type="text" placeholder="@L("TuNgay")" id="MinNgayApDungFilterId">
                                <span style="line-height: 40px;padding: 0 15px 0 15px;"> &mdash; </span>
                                <input class="form-control m-input date-picker" type="text" placeholder="@L("DenNgay")" id="MaxNgayApDungFilterId">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="DichVuTenFilterId">(@L("DichVu")) @L("Ten")</label>
                            <input type="text" class="form-control" name="dichVuTenFilter" id="DichVuTenFilterId">
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-xl-12">
                        <span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
                            <i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")</span>
                        <span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
                            <i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")</span>
                    </div>
                </div>
                <div class="row align-items-center">
                    <table id="GiaDichVusTable" class="display table table-striped table-bordered table-hover dt-responsive nowrap">
                        <thead>
                        <tr>
                            <th>@L("Actions")</th>
                            <th>@L("MucGia")</th>
                            <th>@L("MoTa")</th>
                            <th>@L("Gia")</th>
                            <th>@L("NgayApDung")</th>
                            <th>@L("DichVuTen")</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>